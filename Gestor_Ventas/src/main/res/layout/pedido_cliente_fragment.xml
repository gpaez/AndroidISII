<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textCliente"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/azure" />

    <TextView
        android:text="Fecha Venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCliente"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/textFechaVenta"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/azure" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textCliente"
        android:layout_toEndOf="@+id/textFechaVenta"
        android:layout_marginStart="41dp"
        android:layout_marginTop="14dp"
        android:id="@+id/editFechaVenta" />


    <TextView
        android:text="Condicion Venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textCondVenta"
        android:layout_below="@+id/editFechaVenta"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:textStyle="normal|bold"
        android:textColor="@color/azure" />

    <Switch
        android:text="Contado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:textStyle="normal|bold"
        android:textColor="@color/azure"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textCondVenta"
        android:layout_alignStart="@+id/editFechaVenta"
        android:layout_marginStart="13dp" />

</RelativeLayout>
